<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=9">
  <style>
	body{
		background: white;
		color: black;
		cursor: default;
		padding: 2px;
		font: 16px Arial;
	}
  </style>
  <title>app</title>
  <hta:application 
  id=app
  applicationName=app
  caption=yes
  innerBorder=yes
  selection=no
  scroll=no
  contextmenu=no
  navigable=yes />
  <script src="wscript.js"></script>
  <script>resize(600, 500)</script>
</head>
<body>
	<textarea id="js" cols=44 rows=14></textarea><br>
	<button id="btn">Execute</button>
	<script>
		btn.onclick = function(){
			try{
				eval(js.innerHTML);
			}catch(e){
				alert(e.name + ": " + e.message);
			}
		}
	</script>
</body>
</html>
