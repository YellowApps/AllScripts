<html>
<head>
  <meta charset="utf-8">
  <title>app</title>
  <hta:application
  applicationName=hta1
  caption=yes
  innerBorder=yes
  selection=no
  scroll=no
  contextmenu=no
  navigable=yes
  icon="./images/logo.png" />
  <style id="bclibStyle">
    hr{
      margin: 0px;
    }
  </style>
  <script>
    var winWidth = 1000;
    var winHeight = 700;

    window.resizeTo(winWidth, winHeight);
    window.moveTo(screen.width / 2 - winWidth / 2, screen.height / 2 - winHeight / 2);
  </script>
</head>
<body bgcolor="#4a3ea0">
  <div id="desktop"></div>
  <div id="windows"></div>
  <script src="bclib.js"></script>
  <script>
    try{
      bclib.desktop();
    }catch(e){
      alert(e.name + ": " + e.message)
    }
  </script>
</body>
</html>
